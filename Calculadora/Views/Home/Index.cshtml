@{
    ViewData["Title"] = "Calculadora";
}

    <div class="text-center">
        <h1 class="display-4">Calculadora</h1>
        <form method="post">
            <!--   adicionar efeito de mem ao http -->
            <input type="hidden" name="primeiroValor" value="@ViewBag.PriemiroValor" />
            <input type="hidden" name="operador" value="@ViewBag.Operador" />

            <table border="1">
                <tr>
                    <td colspan="5">
                        <input type="text" readonly="readonly" name="visor" value="@ViewBag.Visor" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="bt" value="7" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="8" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="9" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value=":" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="+\-" class="btn" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="bt" value="4" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="5" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="6" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="*" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="C" class="btn" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="bt" value="3" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="2" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="1" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="+" class="btn" />
                    </td>
                    <td rowspan="2">
                        <input type="submit" name="bt" value="=" class="btn" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" name="bt" value="0" class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="," class="btn" />
                    </td>
                    <td>
                        <input type="submit" name="bt" value="+" class="btn" />
                    </td>
                </tr>

            </table>
        </form>

    </div>